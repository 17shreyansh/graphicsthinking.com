{
  "name": "graphics-thinking-portfolio",
  "version": "1.0.0",
  "description": "Professional graphic designer portfolio website",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm install --production",
    "start": "cd server && npm start",
    "deploy": "npm run build && npm run build:server",
    "test": "cd client && npm test",
    "lint": "cd client && npm run lint"
  },
  "keywords": ["portfolio", "graphic-design", "react", "nodejs"],
  "author": "Graphics Thinking",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}